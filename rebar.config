{erl_opts, [debug_info]}.
{deps, [{thoas, "1.2.0"}]}.

{project_plugins, [
    rebar3_hex,
    rebar3_lint,
    erlfmt
]}.

{erlfmt, [write]}.

{dialyzer, [{warnings, [no_return, error_handling, underspecs, unmatched_returns, no_unknown]}]}.
{xref_checks, [
    undefined_function_calls,
    undefined_functions,
    locals_not_used,
    deprecated_function_calls,
    deprecated_functions
]}.
